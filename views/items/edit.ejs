  </head>
  <body>
    <div class='header'>
    <%if (currentUser) {%>
      <li>Welcome <%=currentUser.username%></li>

  <form action="/sessions?_method=DELETE" method="POST">
    <input id='linelogout'type="submit" name="" value="Log Out">
  </form>
  <%} else {%>
      <li> <a href="/users/new">Sign Up</a></li>
      <li><a href="/sessions/new">Log In</a></li>
  <%  } %>
  <br/>
  </div>

    <div class='header'>
    <h1>edit page</h1>
    </div>
    <button class='button'><a id='line'href="/storeuritems">Home Page</a></button><br></br>
    <div class='middle'>
    <form  action="/storeuritems/<%=items.id%>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" value="<%=items.name%>">
      <label for="serialNumber">Serial Number:</label>
      <input type="text" name="serialNumber" value="<%=items.serialNumber%>">
      <label for="idNumber">Id Number:</label>
      <input type="text" name="idNumber" value="<%=items.idNumber%>">
      <label for="img">Image:</label>
      <input type="text" name="img" value="<%=items.img%>">
      <label for="description">Description:</label>
      <input type="text" name="description" value="<%=items.description%>">
      <label for="price">Price:</label>
      <input type="text" name="price" value="<%=items.price%>">

         <input class='button1'type="submit" value="Confirm Changes">
    </form>
</div>

  </body>
</html>
